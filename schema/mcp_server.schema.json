{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://agent-matrix.github.io/catalog/schema/mcp_server.schema.json",
  "title": "mcp_ingest MCP Server Manifest",
  "description": "JSON Schema for MCP server manifests generated by mcp_ingest, aligned with Matrix Hub ingestion requirements",
  "type": "object",
  "required": ["type", "id", "name", "mcp_registration"],
  "properties": {
    "type": {
      "const": "mcp_server",
      "description": "Manifest type identifier"
    },
    "id": {
      "type": "string",
      "minLength": 1,
      "description": "Unique identifier for this MCP server"
    },
    "name": {
      "type": "string",
      "minLength": 1,
      "description": "Human-readable name of the server"
    },
    "description": {
      "type": ["string", "null"],
      "description": "Detailed description of the server's functionality"
    },
    "version": {
      "type": ["string", "null"],
      "description": "Semantic version of the server"
    },
    "mcp_registration": {
      "type": "object",
      "required": ["server"],
      "description": "MCP protocol registration configuration",
      "properties": {
        "server": {
          "type": "object",
          "required": ["transport"],
          "description": "Server connection configuration",
          "properties": {
            "transport": {
              "type": "string",
              "enum": ["SSE", "STDIO", "WS"],
              "description": "Transport protocol for MCP communication"
            },
            "url": {
              "type": ["string", "null"],
              "format": "uri",
              "description": "Server URL (required for SSE and WS transports)"
            },
            "exec": {
              "type": ["object", "null"],
              "description": "Execution configuration (required for STDIO transport)",
              "properties": {
                "cmd": {
                  "type": "array",
                  "items": {
                    "type": "string"
                  },
                  "minItems": 1,
                  "description": "Command and arguments to execute"
                },
                "cwd": {
                  "type": "string",
                  "description": "Working directory for execution"
                },
                "env": {
                  "type": "object",
                  "additionalProperties": {
                    "type": "string"
                  },
                  "description": "Environment variables for execution"
                }
              },
              "additionalProperties": true
            }
          },
          "additionalProperties": true
        }
      },
      "additionalProperties": true
    },
    "provenance": {
      "type": ["object", "null"],
      "description": "Information about the source and harvesting of this manifest",
      "properties": {
        "repo_url": {
          "type": "string",
          "format": "uri",
          "description": "Source repository URL"
        },
        "subpath": {
          "type": "string",
          "description": "Path within repository"
        },
        "ref": {
          "type": "string",
          "description": "Git reference (tag, branch, or commit)"
        },
        "harvested_from": {
          "type": "string",
          "description": "Root repository this was harvested from"
        },
        "harvested_at": {
          "type": "string",
          "format": "date-time",
          "description": "Timestamp when this was harvested"
        }
      },
      "additionalProperties": true
    },
    "lifecycle": {
      "type": ["object", "null"],
      "description": "Lifecycle and deprecation tracking",
      "properties": {
        "status": {
          "type": "string",
          "enum": ["active", "deprecated", "disabled", "deleted"],
          "description": "Current lifecycle status"
        },
        "deprecated_at": {
          "type": "string",
          "format": "date-time",
          "description": "Timestamp when manifest was deprecated"
        },
        "reason": {
          "type": ["string", "null"],
          "description": "Human-readable deprecation/status reason"
        },
        "replaced_by": {
          "type": ["string", "null"],
          "description": "ID of replacement server if applicable"
        },
        "reactivated_at": {
          "type": "string",
          "format": "date-time",
          "description": "Timestamp when deprecated manifest was reactivated"
        }
      },
      "additionalProperties": true
    },
    "harvest": {
      "type": ["object", "null"],
      "description": "Harvest tracking metadata",
      "properties": {
        "seen_in_latest_run": {
          "type": "boolean",
          "description": "Whether this manifest was found in the most recent harvest"
        },
        "last_seen_at": {
          "type": "string",
          "format": "date-time",
          "description": "Timestamp of last successful harvest"
        }
      },
      "additionalProperties": true
    },
    "tags": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "Categorization tags for discovery"
    },
    "license": {
      "type": ["string", "null"],
      "description": "SPDX license identifier"
    },
    "homepage": {
      "type": ["string", "null"],
      "format": "uri",
      "description": "Project homepage URL"
    },
    "documentation": {
      "type": ["string", "null"],
      "format": "uri",
      "description": "Documentation URL"
    },
    "repository": {
      "type": ["string", "null"],
      "format": "uri",
      "description": "Source code repository URL"
    }
  },
  "additionalProperties": true,
  "allOf": [
    {
      "if": {
        "properties": {
          "mcp_registration": {
            "properties": {
              "server": {
                "properties": {
                  "transport": {
                    "const": "SSE"
                  }
                }
              }
            }
          }
        }
      },
      "then": {
        "properties": {
          "mcp_registration": {
            "properties": {
              "server": {
                "required": ["url"],
                "properties": {
                  "url": {
                    "type": "string",
                    "minLength": 1
                  }
                }
              }
            }
          }
        }
      }
    },
    {
      "if": {
        "properties": {
          "mcp_registration": {
            "properties": {
              "server": {
                "properties": {
                  "transport": {
                    "const": "WS"
                  }
                }
              }
            }
          }
        }
      },
      "then": {
        "properties": {
          "mcp_registration": {
            "properties": {
              "server": {
                "required": ["url"],
                "properties": {
                  "url": {
                    "type": "string",
                    "minLength": 1
                  }
                }
              }
            }
          }
        }
      }
    },
    {
      "if": {
        "properties": {
          "mcp_registration": {
            "properties": {
              "server": {
                "properties": {
                  "transport": {
                    "const": "STDIO"
                  }
                }
              }
            }
          }
        }
      },
      "then": {
        "properties": {
          "mcp_registration": {
            "properties": {
              "server": {
                "required": ["exec"],
                "properties": {
                  "exec": {
                    "type": "object",
                    "required": ["cmd"],
                    "properties": {
                      "cmd": {
                        "type": "array",
                        "minItems": 1
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  ]
}
