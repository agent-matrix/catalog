{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://agent-matrix.github.io/catalog/schema/mcp_server.schema.json",
  "title": "mcp_ingest MCP Server Manifest",
  "description": "JSON Schema for MCP server manifests generated by mcp_ingest, aligned with Matrix Hub ingestion requirements",
  "type": "object",
  "required": ["type", "id", "name", "mcp_registration"],
  "properties": {
    "type": {
      "const": "mcp_server",
      "description": "Manifest type identifier"
    },
    "id": {
      "type": "string",
      "minLength": 1,
      "description": "Unique identifier for this MCP server"
    },
    "name": {
      "type": "string",
      "minLength": 1,
      "description": "Human-readable name of the server"
    },
    "description": {
      "type": ["string", "null"],
      "description": "Detailed description of the server's functionality"
    },
    "version": {
      "type": ["string", "null"],
      "description": "Semantic version of the server"
    },
    "mcp_registration": {
      "type": "object",
      "required": ["server"],
      "description": "MCP protocol registration configuration",
      "properties": {
        "server": {
          "type": "object",
          "required": ["transport"],
          "description": "Server connection configuration",
          "properties": {
            "transport": {
              "type": "string",
              "enum": ["SSE", "STDIO", "WS"],
              "description": "Transport protocol for MCP communication"
            },
            "url": {
              "type": ["string", "null"],
              "format": "uri",
              "description": "Server URL (required for SSE and WS transports)"
            },
            "exec": {
              "type": ["object", "null"],
              "description": "Execution configuration (required for STDIO transport)",
              "properties": {
                "cmd": {
                  "type": "array",
                  "items": {
                    "type": "string"
                  },
                  "minItems": 1,
                  "description": "Command and arguments to execute"
                },
                "cwd": {
                  "type": "string",
                  "description": "Working directory for execution"
                },
                "env": {
                  "type": "object",
                  "additionalProperties": {
                    "type": "string"
                  },
                  "description": "Environment variables for execution"
                }
              },
              "additionalProperties": true
            }
          },
          "additionalProperties": true
        }
      },
      "additionalProperties": true
    },
    "provenance": {
      "type": ["object", "null"],
      "description": "Information about the source and harvesting of this manifest",
      "properties": {
        "repo_url": {
          "type": "string",
          "format": "uri",
          "description": "Source repository URL"
        },
        "subpath": {
          "type": "string",
          "description": "Path within repository"
        },
        "ref": {
          "type": "string",
          "description": "Git reference (tag, branch, or commit)"
        },
        "harvested_from": {
          "type": "string",
          "description": "Root repository this was harvested from"
        },
        "harvested_at": {
          "type": "string",
          "format": "date-time",
          "description": "Timestamp when this was harvested"
        }
      },
      "additionalProperties": true
    },
    "tags": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "Categorization tags for discovery"
    },
    "license": {
      "type": ["string", "null"],
      "description": "SPDX license identifier"
    },
    "homepage": {
      "type": ["string", "null"],
      "format": "uri",
      "description": "Project homepage URL"
    },
    "documentation": {
      "type": ["string", "null"],
      "format": "uri",
      "description": "Documentation URL"
    },
    "repository": {
      "type": ["string", "null"],
      "format": "uri",
      "description": "Source code repository URL"
    }
  },
  "additionalProperties": true
}
